{
  "name": "subscriptions-portal-theme",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "shopify": "shopify",
    "build": "shopify app build",
    "dev": "shopify app dev",
    "info": "shopify app info",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",

    "portal:build": "esbuild portal-src/js/portal-entry.js --bundle --format=iife --platform=browser --target=es2018 --outfile=extensions/subscriptions-portal-theme/assets/portal.bundle.js --minify",
    "portal:watch": "esbuild portal-src/js/portal-entry.js --bundle --format=iife --platform=browser --target=es2018 --outfile=extensions/subscriptions-portal-theme/assets/portal.bundle.js --sourcemap --watch",

    "build:css": "sass portal-src/styles/portal.scss extensions/subscriptions-portal-theme/assets/portal.min.css --style=compressed --no-source-map",
    "watch:css": "sass portal-src/styles/portal.scss extensions/subscriptions-portal-theme/assets/portal.min.css --style=expanded --source-map --watch",

    "portal:build:all": "npm run portal:build && npm run build:css",
    "portal:deploy": "npm run portal:build:all && shopify app deploy"
  },
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "author": "admin",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.20.2",
    "sass": "^1.97.3"
  },
  "workspaces": [
    "extensions/*"
  ]
}